{
    "manifest_version": 3,
    "name" : "Extension Cookie Disabler",
    "version" : "1.0",
    "description": "To disable cookies because we are lazy :)",
    "action" : {
        "default_popup" : "index.html"
    },
    "icons":{
        "32": "images/cookie-32.png",
        "50": "images/cookie-50.png"
    },
    "permissions":[
        "scripting",
        "cookies",
        "activeTab"
    ],
    "host_permissions": [
        "<all_urls>"

    ],
    "content_scripts": [
        {
        "matches": ["<all_urls>"],
        "js": ["scripts/Cookie_Disabler.js"],
        "run_at": "document_idle"
        }
    ]

}